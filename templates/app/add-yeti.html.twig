{% extends "base.html.twig" %}

{% block body %}
    <h1 class="text-primary mt-4" style="font-weight: bold;">Add a Yeti</h1>

    <div class="mt-4">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr':{'class':'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.height) }}
                {{ form_widget(form.height, {'attr':{'class':'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.weight) }}
                {{ form_widget(form.weight, {'attr':{'class':'form-control'}}) }}
            </div>

            {{ form_widget(form.add, {'attr': {'class': 'btn btn-primary mt-2'}, 'label': 'Add'}) }}
            <button class="btn btn-primary mt-2" type="button" onclick="window.location.href='/'">Back</button>
        {{ form_end(form) }}
    </div>
{% endblock %} 